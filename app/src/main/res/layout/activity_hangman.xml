    <!--Text Box used to enter values created through design tab-->
    <EditText
        android:id="@+id/hangmanText"
        android:textCursorDrawable="@null"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="Word"
        android:backgroundTint="@color/common_google_signin_btn_text_dark"
        android:inputType="textPersonName"
        android:maxLength="10"
        android:singleLine="true"
        android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hangmanButton"
        app:layout_constraintStart_toStartOf="parent" />

    <!--Done Button created to move the app onto the text stage-->
    <Button
        android:id="@+id/hangmanButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
